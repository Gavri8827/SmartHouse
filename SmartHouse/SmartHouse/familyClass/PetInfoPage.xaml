<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHouse.familyClass.PetInfoPage"
             Title="{Binding Name}">
    <StackLayout Margin="20">
        <Image Source="{Binding Image}"/>
        <Label Text="{Binding Name}" FontSize="Large" TextColor="Silver"/>
        <Label Text="{Binding Kind}" FontSize ="Large" TextColor="Silver"/>
        <Label Text="{Binding Insurance}" FontSize ="Large" TextColor="Silver"/>

        <Label Text="insert number of insurance:" FontSize="Medium" TextColor="Green"/>
        <Entry x:Name="InsuranceNumberOcount" Keyboard="Numeric" Placeholder="InsuranceNumber"
            ReturnType="Next"/>

        <Label Text="Next time of medicale treatment:" FontSize="Medium" TextColor="Green"/>
        <DatePicker x:Name="date" DateSelected="DatePicker_DateSelected" Format="D"/>

        <Label Text="time of corrent medicale treatment:" FontSize="Medium" TextColor="Green"/>
        <Label x:Name="correntDate"/>



        <Button Text="save" Clicked="Button_Clicked"/>






    </StackLayout>
</ContentPage>