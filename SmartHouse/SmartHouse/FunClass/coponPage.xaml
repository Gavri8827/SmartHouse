<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHouse.FunClass.coponPage"
             Title="Copon List">
    <ListView x:Name="CoponList" SeparatorColor="Gray">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Name}" FontSize="Medium" VerticalOptions="Center" TextColor="BurlyWood"/>
                        <Label Text="{Binding Type}" FontSize="Medium" VerticalOptions="Center" TextColor="BurlyWood"/>
                    </StackLayout>



                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        
        

    </ListView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="insert"
               Clicked="ToolbarItem_Clicked"
               IconImageSource="insert.png"
               Priority="2"
               Order="Primary"/>
       




    </ContentPage.ToolbarItems>

</ContentPage>