<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHouse.shopcClass.ShopListPage"
             Title="Shop List">
    <ListView x:Name="ShopList" SeparatorColor="Gray">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Description}" FontSize="Medium" VerticalOptions="Center" TextColor="BurlyWood"/>
                        <Label Text="{Binding Quantity}" FontSize="Medium" VerticalOptions="Center" TextColor="BurlyWood"/>
                        <CheckBox IsChecked="{Binding IsDone}" HorizontalOptions="EndAndExpand"  />
                        </StackLayout>



                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="insert"
       Clicked="ToolbarItem_Clicked"
      IconImageSource="add.png"
      Priority="2"
       Order="Primary"/>




    </ContentPage.ToolbarItems>
</ContentPage>