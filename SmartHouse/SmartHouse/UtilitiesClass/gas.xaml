<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHouse.UtilitiesClass.gas">
    <StackLayout>
        <Grid>
            <Image Source="gasInvoice.jpg"
            Aspect="AspectFit"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
        </Grid>
        
        <Label Text="מספר צרכן:" FontSize="Medium"/>
        <Label x:Name="GasNumber" FontSize="Large" TextColor="Black"/>

        <Label Text="חברת הגז:" FontSize="Medium"/>
        <Label x:Name="GasCompany" FontSize="Large" TextColor="Black"/>

        <Label Text="מספר טלפון חברת הגז:" FontSize="Medium"/>
        <Label x:Name="GasPhoneNumber" FontSize="Large" TextColor="Black"/>

        <!-- קלט תאריך -->
        <Label Text="תאריך לתשלום:" FontSize="Medium"/>
        <DatePicker x:Name="gasDatePicker"
                Format="dd/MM/yyyy"
                HorizontalOptions="Fill"
                VerticalOptions="Center"/>

        <!-- קלט סכום -->
        <Label Text="סכום לתשלום:" FontSize="Medium"/>
        <Entry x:Name="gasPaymentEntry"
           Placeholder="0.00"
           Keyboard="Numeric"/>

        <Button Text="שמור" BackgroundColor="#FF6A00" Clicked="gas_clicked"/>


    </StackLayout>
</ContentPage>